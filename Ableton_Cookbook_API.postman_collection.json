{
	"info": {
		"_postman_id": "ableton-cookbook-api",
		"name": "Ableton Cookbook API",
		"description": "Complete API collection for the Ableton Cookbook platform - upload, browse, and manage Ableton Live rack files (.adg)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{api_token}}",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Get CSRF token if needed",
					"if (pm.request.method !== 'GET') {",
					"    pm.sendRequest({",
					"        url: pm.environment.get('base_url') + '/sanctum/csrf-cookie',",
					"        method: 'GET'",
					"    });",
					"}"
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "https://ableton.recipes",
			"type": "string"
		},
		{
			"key": "api_base",
			"value": "{{base_url}}/api/v1",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"description": "Authentication endpoints for API access",
			"item": [
				{
					"name": "Get CSRF Cookie",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/sanctum/csrf-cookie",
							"host": ["{{base_url}}"],
							"path": ["sanctum", "csrf-cookie"]
						},
						"description": "Get CSRF cookie for subsequent authenticated requests"
					}
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Store the API token from response",
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.token) {",
									"        pm.environment.set('api_token', response.token);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"password\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/login",
							"host": ["{{base_url}}"],
							"path": ["login"]
						},
						"description": "Login to get API token"
					}
				},
				{
					"name": "Get Current User",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/user",
							"host": ["{{base_url}}"],
							"path": ["api", "user"]
						},
						"description": "Get current authenticated user information"
					}
				}
			]
		},
