# D2 Diagram Configuration for Production
# Add these variables to your production .env file

# D2 Core Settings
D2_ENABLED=true
D2_BINARY_PATH=/usr/local/bin/d2
D2_USE_SYSTEM_PATH=false
D2_TEMP_PATH=/var/www/temp/d2
D2_TIMEOUT=10

# D2 Caching (Recommended for Production)
D2_CACHE_ENABLED=true
D2_CACHE_TTL=3600

# D2 Logging
D2_LOGGING_ENABLED=true
D2_LOG_LEVEL=error

# Performance Tuning (Optional)
# D2_TIMEOUT=30  # For complex diagrams
# D2_CACHE_TTL=7200  # 2 hours for frequently accessed diagrams